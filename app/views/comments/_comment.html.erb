        <%= image_tag "whale.jpg",class: "w-10 h-10 rounded-full" %>
    </div>
    <div class="comment-content">
        <%= comment.content %>
    </div>
    <div class="comment-info">
        <small>
            <p><%= comment.user_username%></p>
