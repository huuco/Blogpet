
<%= form_with(model: [parent_comment.commentable, comment],
  id: "reply_form_#{parent_comment.id}",
  data: { 
    controller: "reset-form", 
    action: "turbo:submit-end->reset-form#clear",
    "reset-form-target": "container",
    "reset-form-id-value": parent_comment.id
  }) do |form| %>
  <%= form.hidden_field :parent_id, value: parent_comment.id %>
  
  <div class="field">
    <%= form.text_area :content,
                      placeholder: "Write a reply...",
                      required: true,
                      class: "w-full px-3 py-2 text-sm text-gray-700 border rounded-lg focus:outline-none focus:border-blue-500 resize-none" %>
  </div>
  
  <div class="actions" >
    <%= button_tag( :class => "text-blue-500 font-semibold text-sm hover:text-blue-600 transition duration-300 ease-in-out cursor-pointer") do %>
      <svg class="h-8 w-8 text-gray-500"  viewBox="0 0 24 24"  fill="none"  stroke="currentColor"  stroke-width="2"  stroke-linecap="round"  stroke-linejoin="round">  <polygon points="3 11 22 2 13 21 11 13 3 11" /></svg>
    <% end %>
  </div>
<% end %>
 