<!-- component -->
<div class="form-loign">
  <div class=" left-1/3  py-6 flex flex-col justify-center sm:py-12 hidden body-form-login absolute z-20">
    <div class="relative py-3 sm:max-w-xl sm:mx-auto">
      <div
        class="absolute inset-0 bg-gradient-to-r from-blue-300 to-blue-600 shadow-lg transform -skew-y-6 sm:skew-y-0 sm:-rotate-6 sm:rounded-3xl">
      </div>
      <div class="relative px-4 py-10 bg-white shadow-lg sm:rounded-3xl sm:p-20">
        <div class="max-w-md mx-auto">
          <div>
            <h1 class="text-2xl font-semibold">Login Form</h1>
          </div>
          <div class="divide-y divide-gray-200">
            <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-sm">
              <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="">
                <%= f.label :email, "Email address", class: "block text-sm font-medium leading-6 text-gray-900" %>
                <%= f.email_field :email, id: "email", autofocus: true, autocomplete: "off", class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6", placeholder: "Email address"%>
              </div>
              <div class="">
                <%= f.label :password, "Password", class: "block text-sm font-medium leading-6 text-gray-900" %>
                <%= f.password_field :password, id: "password", autofocus: true, autocomplete: "off", class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6", placeholder: "Password"%>
              </div>
              <div class="">
                <button class="flex w-full justify-center rounded-md bg-indigo-600 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">Submit</button>
              </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
